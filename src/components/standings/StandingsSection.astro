---
type Props = {
    headingLabel: string;
    totalTeams: number;
};

const { headingLabel, totalTeams } = Astro.props as Props;
---

<section class="flex min-h-dvh w-full max-w-[1440px] mx-auto flex-col p-4 text-black">
    {
        totalTeams === 0 ? (
            <p class="mt-2 rounded-xl border border-black/15 px-6 py-8 text-center text-black/60">
                スコアデータが見つかりませんでした。
            </p>
        ) : (
            <>
                <header class="mb-2 flex items-center gap-4 text-xs uppercase tracking-[0.3em] text-black/60">
                    <span class="inline-flex min-w-28 items-center justify-center border-3 px-4 py-2 text-lg font-bold text-black tabular-nums">
                        {headingLabel}
                    </span>
                    <span class="h-0.5 flex-1 bg-border" />
                    <span class="font-bold text-lg text-foreground/90">
                        Total Teams{" "}
                        <span class="tabular-nums">
                            {totalTeams}
                        </span>
                    </span>
                </header>
                <div class="flex-1 overflow-hidden">
                    <slot />
                </div>
            </>
        )
    }
</section>
