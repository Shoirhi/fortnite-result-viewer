---
import BaseHead from "@/components/BaseHead.astro";
interface Props {
    title?: string;
    description?: string;
    image?: string;
}

const { title, description, image } = Astro.props;
---

<!doctype html>
<html lang="ja">
    <head>
        <BaseHead title={title} description={description} image={image} />
    </head>
    <body>
        <main>
            <slot />
        </main>
    </body>
</html>